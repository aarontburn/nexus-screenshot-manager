{
    "name": "Screenshot Manager",
    "id": "aarontburn.Screenshot_Manager",
    "version": "1.0.0",
    "author": "aarontburn",
    "description": "A screenshot manager module for Nexus.",
    "link": "https://github.com/aarontburn/nexus-screenshot-manager",
    "platforms": [
        "win32",
        "linux",
        "darwin"
    ],
    "build": {
        "build-version": 3,
        "excluded": [
            "electron.ts",
            "./renderer/react-wrapper"
        ],
        "included": [
            "./renderer/react-wrapper/react_module"
        ],
        "process": "./process/main.js",
        "replace": [
            {
                "from": "{EXPORTED_MODULE_ID}",
                "to": "%id%",
                "at": [
                    "./process/main.ts",
                    "./renderer/renderer.ts"
                ]
            },
            {
                "from": "{EXPORTED_MODULE_NAME}",
                "to": "%name%",
                "at": [
                    "./process/main.ts"
                ]
            }
        ]
    }
}